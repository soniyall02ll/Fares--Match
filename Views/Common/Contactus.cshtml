@using (Html.BeginForm("contactdata", "contact"))
{
    <section class="contact-area">
        <div class="container pt-30 pb-20">
            <div class="row">
                <div class="contact-items bg-contain">
                    <div class="col-md-4 address">
                        <div class="address-items">
                            <ul class="info">
                                <li>
                                    <h4>Office Location</h4>
                                    <div class="icon"><i class="fa fa-map-marker"></i></div>
                                    <span>
                                        2440 broad way suite 219, New York NY 10024
                                    </span>
                                </li>

                                <li>
                                    <h4>Phone</h4>
                                    <div class="icon"><i class="fa fa-phone fa-rotate-90"></i></div>
                                    <span>866-699-8919</span>
                                </li>
                                <li>
                                    <h4>Email</h4>
                                    <div class="icon"><i class="fa fa-envelope"></i> </div>
                                    <span>support@faressaver.com</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-8 contact-form">
                        <h1>Send a Message</h1>
                        <p>
                            Providing you have any questions don’t hesitate to contact our team. We are always here to answer your questions.
                        </p>
                        <form action="assets/mail/contact.php" method="POST" class="contact-form">
                            <div class="col-md-12">
                                <div class="row">
                                    <input class="input-bg-new" id="txtFName" name="txtFName" placeholder="Name" type="text">
                                    <span class="alert-error"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <input class="input-bg-new" id="txtEmail" name="txtEmail" placeholder="Email*" type="email">
                                    <span class="alert-error"></span>
                                </div>
                                <div class="col-md-6">
                                    <input class="input-bg-new" id="txtPhone" name="txtPhone" placeholder="Phone" type="text">
                                    <span class="alert-error"></span>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="row">
                                    <textarea class="textarea-bg-new" id="MsgTextBox" name="MsgTextBox" placeholder="Tell Us About Project *"></textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="row">
                                    <input type="button" id="btnsend" value="Send Message" class="btn" onclick="ContactValidate(1)" />
                                    @*<button type="submit" name="submit" id="submit">
                                        Send Message <i class="fa fa-paper-plane"></i>
                                    </button>*@
                                </div>
                            </div>
                            <!-- Alert Message -->
                            <div class="col-md-12 alert-notification">
                                <div id="message" class="alert-msg"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


