<script type="text/javascript">
    function ContactValidate(id) {
        var btrue = true;

        var emailReg = /^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/;
        var email_address = $("#txtEmail").val();
        var phone = $('#txtPhone').val(),
        intRegex = /[0-9 -()+]+$/;
        if ($('#txtFName').val() == "") {
            alert("Please enter your Name");
            btrue = false;
        }
        else if (!emailReg.test(email_address) || email_address == '') {
            alert('Please enter a valid email address.');
            btrue = false;
        }
        else if ((phone.length < 10) || (!intRegex.test(phone))) {
            alert('Please enter a valid phone number.');
            btrue = false;
        }
        else if ($('#Message').val() == "") {
            alert("Please enter your comment or question in the Message box.");
            btrue = false;
        }
        if (btrue == true) {
            onsavecontactus(1);
        }
    }

    function onsavecontactus(id) {
        //debugger;
        $.ajax({
            url: '@Url.Action("ContactusEnquiry", "Common")',
            type: 'POST',
            data: {
                name: $('#txtFName').val(),
                Phone: $('#txtPhone').val(),
                Email: $('#txtEmail').val(),
                Message: $('#MsgTextBox').val()
            },
            success: function (msg) {
                $('#Waitpopup').hide();
                $('#txtFName').val("");
                $('#txtPhone').val("");
                $('#txtEmail').val("");
                $('#MsgTextBox').val("");
                alert(msg);
            },
            error: function (msg) {
                alert(msg);
            }
        });

    }
    // ]]>
</script>

